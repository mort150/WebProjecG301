<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            <!-- CSS only -->
            <link rel="stylesheet" href="{{ asset ('css/student.css')}}">
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
			<!-- JavaScript Bundle with Popper -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
		{% endblock %}
	</head>
	<body>
		{% block nav %}
			<div class="container col-4 ">
				<nav class="navbar navbar-expand-lg navbar-light bg-light">
					<a class="navbar-brand" href="{{path ('home')}}">Home</a>
					<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation"></button>
					<div class="collapse navbar-collapse" id="navbarNav">
						<ul class="navbar-nav">
							<li class="nav-item active">
								<a class="nav-link" href="{{path ('subject_index')}}">Subject</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path ('category_index')}}">Major</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href=" {{path ('teacher_index')}}">Teacher</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href=" {{path ('classroom_index')}} ">Classroom</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href=" {{path ('student_index')}} ">Student</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" href="{{path ('app_logout')}}">Logout</a>
							</li>
						</ul>
					</div>
				</nav>
			</div>

		{% endblock %}
		{% block body %}{% endblock %}
	</body>
</html>
