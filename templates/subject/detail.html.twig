{% extends 'base.html.twig' %}

{% block title %}Hello SubjectController!{% endblock %}

{% block body %}
<div class="container-md col-md-8 text-center">
<table class="table">
    <thead>
        <tr>
            <th>Major</th>
            <th>Subject Name</th>
            <th>Subject Code</th>
            <th>Credit</th>
            <th>Description</th>
            {% if is_granted('ROLE_ADMIN') %}
                <th>Controller</th>
            {% endif %}
        </tr>
    </thead>
    <tbody>
        <tr>
            <th>
            <a href="{{path ('category_detail', {'id': subject.subjectcategory.id})}}">
            {{subject.subjectcategory.name}}
            </a>
            </th>
            <th>{{subject.name}}</th>
            <th>{{subject.code}}</th>
            <th>{{subject.credit}}</th>
            <th>{{subject.description}}</th>
            {% if is_granted('ROLE_ADMIN') %}
            <th>
            <a href="{{path ('subject_edit', {'id':subject.id})}}">Edit</a>
            <a href="{{path ('subject_delete', {'id': subject.id})}}">Delete</a>
            </th>
            {% endif %}
        </tr>
    </tbody>
</table>
</div>
{% endblock %}
