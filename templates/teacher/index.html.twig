{% extends 'base.html.twig' %}

{% block title %}Hello TeacherController!
{% endblock %}

{% block body %}
	<div class="container">
		<a class="btn btn-primary" href="{{path("teacher_add")}} "><img src="images/add.png" alt="Add pic" width="50px" height="50px"></a>
	</div>
	<hr>
	<div>
		<table class="table table-striped|sm|bordered|hover|inverse table-inverse table-responsive">
			<thead class="thead-inverse|thead-default">
				<tr>
					<th>ID</th>
					<th>Teacher</th>
					<th>Actions</th>
				</tr>
			</thead>
			<tbody>
				{% for t in teachers %}
					<tr>
						<td> {{t.id}} </td>
						<td>{{ t.name }} </td>
						<td>
                        <a class="btn btn-secondary" href="{{path("teacher_detail",{'id': t.id})}}">Detail</a>
                        <a class="btn btn-danger" href="{{path("teacher_delete",{'id': t.id})}}"
                        onClick = "return confirm("Do you want to delete this teacher?")"
                        > Delete</a>
                        <a class="btn btn-primary" href="{{path("teacher_edit",{'id': t.id})}}">Edit</a>
                        </td>
					</tr>

				{% endfor %}
			</tbody>
		</table>

	</div>
{% endblock %}
