{% extends 'base.html.twig' %}

{% block title %}Hello SubjectCategoryController!{% endblock %}

{% block body %}
<div class="container">
    <h3 class="text-center">{{category.name}}: {{category.description}}</h3>
    <div class="table-wrapper">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th width="250px">Subject Code</th>
                <th>Subject Name</th>
                <th>Credit</th>
            </tr>
        </thead>
        <tbody>
        {% for subject in category.subjects %}
            <tr>
                <th>{{subject.code}}</th>
                <th>
                <a href="{{path ('subject_detail', {'id': subject.id})}}">
                    {{subject.name}}
                </a>
                </th>
                <th>
                    {{subject.credit}}
                </th>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
