{% extends "base.html.twig" %}

{% block body %}
	<center>
		<div class="container col-md-5 mt-6 mb-3 ">
			<h2 class="text-center">ADD NEW CLASS</h2>
			{{ form_start (form) }}
			<div class="form-group ">
				{{ form_label (form.name) }}
				{{ form_widget (form.name,
            {
               'attr' : {'class' : 'form-control'}
            })
         }}
			</div>
			<div class="form-group">
				{{ form_label (form.teacher) }}
				{{ form_widget (form.teacher,
         {
            'attr' : {'class' : 'form-control'}
         })
      }}
			</div>

			<div class="form-group">
				{{ form_label (form.subjects) }}
				{{ form_widget (form.subjects,
         {
            'attr' : {'class' : 'form-control'}
         })
      }}
			</div>

			<div class="form-group">
				{{ form_label (form.students) }}
				{{ form_widget (form.students,
         {
            'attr' : {'class' : 'form-control'}
         })
      }}
			</div>

			<div class="form-group text-center mt-3">
				<input class="btn btn-success" type="submit" value="Add">
			</div>
			{{ form_end (form) }}
		</div>
	</center>
{% endblock %}
