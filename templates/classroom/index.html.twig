{% extends 'base.html.twig' %}
{% block title %}
	Classroom page!
{% endblock %}
{% block body %}
	<center>
		<div class="container col-10 md-8">
			{% if is_granted('ROLE_ADMIN') %}
				<a class="btn btn-primary" href="{{path("classroom_add")}} "><img src="{{asset('images/add.png')}}" alt="Add pic" width="50px" height="50px"></a>
			{% endif %}
			<hr>
			<div class="container col-4 form-group">
				<form action="{{path('classroom_name_search')}} " method="post">
					<input class="form-control" type="search" name="name" placeholder="Search by Name of Classroom" required>
				</form>
			</div>
			<br>
			<div class="container col-8">
				<table class="table table-striped text-center">
					<thead class="thead-dark">
						<tr class="table-info">
							<th>ID</th>
							<th>Name</th>
							{% if is_granted('ROLE_ADMIN') %}
								<th>Actions</th>
							{% endif %}

						</tr>
					</thead>
					<tbody>
						{% for t in classrooms %}
							<tr>
								<td>
									{{t.id}}
								</td>
								<td>
									<a class="btn btn-secondary" href="{{path("classroom_detail",{'id': t.id})}}">{{ t.name }}</a>
								</td>
								{% if is_granted('ROLE_ADMIN') %}
									<td>
										<a class="btn btn-danger" href="{{path("classroom_delete",{'id': t.id})}}" onclick="return confirm(" do you want to delete this classroom?");">
											Delete</a>
										<a class="btn btn-primary" href="{{path("classroom_edit",{'id': t.id})}}">Edit</a>
									</td>
								{% endif %}
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>
	</center>
{% endblock %}
